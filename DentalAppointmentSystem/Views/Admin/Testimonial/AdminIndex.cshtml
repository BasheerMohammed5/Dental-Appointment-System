@model IEnumerable<DentalAppointmentSystem.Models.Testimonial>

@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
    ViewData["Title"] = "Testimonial";
    var query = ViewData["Query"] as string;
}

<div class="container mt-4">
    <h2 class="mb-4">@ViewData["Title"]</h2>

    <!-- Search Bar -->
    <form asp-action="Dashboard" method="get" class="mb-4">
        <div class="input-group">
            <input type="text" name="query" class="form-control" placeholder="Search..." value="@query" />
            <button class="btn btn-primary ms-2" type="submit">
                <i class="fas fa-search"></i> Search
            </button>
        </div>
    </form>

    <!-- Add New Button -->
    <a asp-controller="Testimonial" asp-action="Create" class="btn btn-success mb-4">
        <i class="fas fa-plus"></i> Add New
    </a>

    <!-- Table for Displaying Data -->
    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>Name</th>
                    <th>Text</th>
                    <th>Image</th>
                    <th>Rating</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.Text</td>
                            <td>
                                <img src="@Url.Content("~/img/" + item.Image)" alt="@item.Name" style="width: 100px; height: 100px;" />
                            </td>
                            <td>@item.Rating</td>
                            <td>
                                <a asp-action="EditTestimonial" asp-route-id="@item.ID" class="btn btn-warning btn-sm">
                                    <i class="fas fa-edit"></i> Edit
                                </a>
                                <a asp-action="DeleteTestimonial" asp-route-id="@item.ID" class="btn btn-danger btn-sm ms-2">
                                    <i class="fas fa-trash"></i> Delete
                                </a>
                            </td>
                        </tr>
                }
            </tbody>
        </table>
    </div>
</div>
