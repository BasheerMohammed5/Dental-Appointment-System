@model IEnumerable<DentalAppointmentSystem.Models.PatientDetails>

@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
    ViewData["Title"] = "Patient Details";
    var query = ViewData["Query"] as string;
}

<div class="container mt-4">
    <h2 class="mb-4">@ViewData["Title"]</h2>

    <!-- Search Bar -->
    <form asp-action="Dashboard" method="get" class="mb-4">
        <div class="input-group">
            <input type="text" name="query" class="form-control" placeholder="Search..." value="@query" />
            <button class="btn btn-primary ms-2" type="submit">
                <i class="fas fa-search"></i> Search
            </button>
        </div>
    </form>

    <!-- Add New Button -->
    <a asp-controller="PatientDetails" asp-action="Create" class="btn btn-success mb-4">
        <i class="fas fa-plus"></i> Add New
    </a>

    <!-- Table for Displaying Data -->
    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>ID</th>
                    <th>Patient</th>
                    <th>Register Number</th>
                    <th>Server</th>
                    <th>Address</th>
                    <th>Date</th>
                    <th>Return Date</th>
                    <th>Notes</th>
                    <th>Files</th>
                    <th>Blood Type</th>
                    <th>Allergies</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                        <tr>
                            <td>@item.ID</td>
                            <td>@item.Patient</td>
                            <td>@item.RegisterNumber</td>
                            <td>@item.Server</td>
                            <td>@item.Address</td>
                            <td>@item.Date.ToString("d")</td>
                            <td>@item.ReturnDate?.ToString("d")</td>
                            <td>@item.Notes</td>
                            <td>@item.files</td>
                            <td>@item.BloodType</td>
                            <td>@item.Allergies</td>
                            <td>
                                <a asp-action="EditPatientDetails" asp-route-id="@item.ID" class="btn btn-warning btn-sm">
                                    <i class="fas fa-edit"></i> Edit
                                </a>
                                <a asp-action="DeletePatientDetails" asp-route-id="@item.ID" class="btn btn-danger btn-sm ms-2">
                                    <i class="fas fa-trash"></i> Delete
                                </a>
                            </td>
                        </tr>
                }
            </tbody>
        </table>
    </div>
</div>
