@model DentalAppointmentSystem.Models.Prices
@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="container mt-4">
    <h2 class="mb-4">Edit Price</h2>

    <form asp-action="Edit" enctype="multipart/form-data" method="post">
        @Html.AntiForgeryToken() <!-- تضمين توكن CSRF -->
        <input type="hidden" name="_method" value="PUT" />
        <input type="hidden" asp-for="ID" />

        <div class="form-group mb-3">
            <label asp-for="Server" class="form-label"></label>
            <input asp-for="Server" class="form-control" />
            <span asp-validation-for="Server" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label asp-for="Price" class="form-label"></label>
            <textarea asp-for="Price" class="form-control" rows="3"></textarea>
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label asp-for="Description" class="form-label"></label>
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Update Price</button>
        <a asp-action="AdminIndex" asp-controller="Price" class="btn btn-secondary ms-2">Back to AdminIndex</a> <!-- زر العودة إلى AdminIndex -->
    </form>
</div>

@section Scripts {
        <script>
            // Example of client-side form validation handling
            document.addEventListener("DOMContentLoaded", function() {
                const form = document.querySelector("form");
                form.addEventListener("submit", function(event) {
                    // Optionally, add custom validation or alerts before submission
                    // e.g., Check if required fields are filled
                });
            });
        </script>
}
