@model DentalAppointmentSystem.Models.Prices
@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="container mt-4">
    <h3 class="mb-4">Are you sure you want to delete this Price?</h3>

    <form asp-action="DeleteConfirmed" method="post">
        @Html.AntiForgeryToken() <!-- تضمين توكن CSRF -->
        <input type="hidden" name="_method" value="DELETE" />
        <input type="hidden" asp-for="ID" />

        <div class="form-group">
            <label>Server:</label>
            <p>@Model.Server</p>
        </div>
        <div class="form-group">
            <label>Price:</label>
            <p>@Model.Price</p>
        </div>
        <div class="form-group">
            <label>Description:</label>
            <p>@Model.Description</p>
        </div>

        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="AdminIndex" asp-controller="Price" class="btn btn-secondary ms-2">Back to AdminIndex</a> <!-- زر العودة إلى AdminIndex -->
    </form>
</div>

@section Scripts {
        <script>
            // Example of client-side confirmation dialog
            document.addEventListener("DOMContentLoaded", function() {
                const form = document.querySelector("form");
                form.addEventListener("submit", function(event) {
                    const confirmed = confirm("Are you sure you want to delete this item?");
                    if (!confirmed) {
                        event.preventDefault();
                    }
                });
            });
        </script>
}
