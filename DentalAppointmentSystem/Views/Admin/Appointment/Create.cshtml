@model DentalAppointmentSystem.Models.Appointment
@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">Add New Appointment</h3>
                </div>
                <div class="card-body">
                    <form asp-controller="Appointment" asp-action="Create" method="post" enctype="multipart/form-data">

                        <div class="form-group row">
                            <label asp-for="DentistId" class="col-sm-3 col-form-label">Dentist</label>
                            <div class="col-sm-9">
                                @Html.DropDownList("DentistId", (SelectList)ViewData["DentistId"], "Select Dentist", new { @class = "form-control" })
                                <span asp-validation-for="DentistId" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group row mt-3">
                            <label asp-for="ServerId" class="col-sm-3 col-form-label">Server</label>
                            <div class="col-sm-9">
                                @Html.DropDownList("ServerId", (SelectList)ViewData["ServerId"], "Select Server", new { @class = "form-control" })
                                <span asp-validation-for="ServerId" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group row mt-3">
                            <label asp-for="PatientName" class="col-sm-3 col-form-label">Patient Name</label>
                            <div class="col-sm-9">
                                <input asp-for="PatientName" class="form-control" />
                                <span asp-validation-for="PatientName" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group row mt-3">
                            <label asp-for="Phone" class="col-sm-3 col-form-label">Phone</label>
                            <div class="col-sm-9">
                                <input asp-for="Phone" class="form-control" />
                                <span asp-validation-for="Phone" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group row mt-3">
                            <label asp-for="Email" class="col-sm-3 col-form-label">Email</label>
                            <div class="col-sm-9">
                                <input asp-for="Email" class="form-control" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group row mt-3">
                            <label asp-for="Date" class="col-sm-3 col-form-label">Date</label>
                            <div class="col-sm-9">
                                <input asp-for="Date" class="form-control" />
                                <span asp-validation-for="Date" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group row mt-3">
                            <label asp-for="Time" class="col-sm-3 col-form-label">Time</label>
                            <div class="col-sm-9">
                                <input asp-for="Time" class="form-control" />
                                <span asp-validation-for="Time" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group row mt-3">
                            <label asp-for="DurationInMinutes" class="col-sm-3 col-form-label">Duration (Minutes)</label>
                            <div class="col-sm-9">
                                <input asp-for="DurationInMinutes" class="form-control" />
                                <span asp-validation-for="DurationInMinutes" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group row mt-3">
                            <label asp-for="ReasonForVisit" class="col-sm-3 col-form-label">Reason for Visit</label>
                            <div class="col-sm-9">
                                <input asp-for="ReasonForVisit" class="form-control" />
                                <span asp-validation-for="ReasonForVisit" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group row mt-3">
                            <label asp-for="Status" class="col-sm-3 col-form-label">Status</label>
                            <div class="col-sm-9">
                                <input asp-for="Status" class="form-control" />
                                <span asp-validation-for="Status" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group row mt-4">
                            <div class="col-sm-12 text-center">
                                <button type="submit" class="btn btn-primary">Add Appointment</button>
                                <a asp-action="AdminIndex" asp-controller="Appointment" class="btn btn-secondary ms-3">Back to Dashboard</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
