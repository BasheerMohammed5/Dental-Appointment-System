@model DentalAppointmentSystem.Models.Dentist
@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="container mt-4">
    <h3 class="mb-4">Are you sure you want to delete this Dentist?</h3>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" name="_method" value="DELETE" />
        <input type="hidden" asp-for="ID" />

        <!-- Confirmation Buttons -->
        <div class="form-group mb-4">
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="AdminIndex" asp-controller="Dentist" class="btn btn-secondary ms-2">Back to AdminIndex</a> <!-- زر العودة إلى AdminIndex -->
        </div>
    </form>
</div>
