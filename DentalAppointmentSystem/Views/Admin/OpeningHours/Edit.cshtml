@model DentalAppointmentSystem.Models.OpeningHours

@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
    ViewData["Title"] = "Edit Opening Hours";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>

    <form asp-action="EditOpeningHours" enctype="multipart/form-data" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="ID" name="_method" value="PUT" />

        <div class="form-group mb-3">
            <label asp-for="Day" class="form-label"></label>
            <input asp-for="Day" class="form-control" />
            <span asp-validation-for="Day" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="From" class="form-label"></label>
            <input asp-for="From" class="form-control" type="time" />
            <span asp-validation-for="From" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="To" class="form-label"></label>
            <input asp-for="To" class="form-control" type="time" />
            <span asp-validation-for="To" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="From2" class="form-label"></label>
            <input asp-for="From2" class="form-control" type="time" />
            <span asp-validation-for="From2" class="text-danger"></span>
        </div>

        <div class="form-group mb-4">
            <label asp-for="To2" class="form-label"></label>
            <input asp-for="To2" class="form-control" type="time" />
            <span asp-validation-for="To2" class="text-danger"></span>
        </div>

        <div class="form-group mb-4">
            <label asp-for="DentistId" class="form-label"></label>
            <select asp-for="DentistId" asp-items="ViewBag.DentistId" class="form-control">
                <option value="">Select Dentist</option>
            </select>
            <span asp-validation-for="DentistId" class="text-danger"></span>
        </div>

        <div class="form-group mb-4">
            <button type="submit" class="btn btn-primary">Save Changes</button>
            <a asp-action="Dashboard" class="btn btn-secondary ms-2">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
        <partial name="_ValidationScriptsPartial" />
}
