@model DentalAppointmentSystem.Models.OpeningHours

@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
    ViewData["Title"] = "Delete Opening Hours";
}

<div class="container mt-4">
    <h2 class="mb-4">@ViewData["Title"]</h2>

    <form asp-action="Delete" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="ID" />

        <div class="alert alert-warning mb-4">
            <h4 class="alert-heading">Are you sure you want to delete this entry?</h4>
            <p>Once deleted, you will not be able to recover this record!</p>
        </div>

        <div class="form-group mb-3">
            <label class="form-label">Day:</label>
            <p class="form-control-plaintext">@Model.Day</p>
        </div>

        <div class="form-group mb-3">
            <label class="form-label">From:</label>
            <p class="form-control-plaintext">@Model.From.ToString(@"hh\:mm")</p>
        </div>

        <div class="form-group mb-3">
            <label class="form-label">To:</label>
            <p class="form-control-plaintext">@Model.To.ToString(@"hh\:mm")</p>
        </div>

        <div class="form-group mb-3">
            <label class="form-label">From2:</label>
            <p class="form-control-plaintext">@Model.From2?.ToString(@"hh\:mm")</p>
        </div>

        <div class="form-group mb-4">
            <label class="form-label">To2:</label>
            <p class="form-control-plaintext">@Model.To2?.ToString(@"hh\:mm")</p>
        </div>

        <div class="form-group mb-3">
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="AdminIndex" asp-controller="OpeningHours" class="btn btn-secondary ms-2">Cancel</a>
        </div>
    </form>
</div>
